#:import utils kivy.utils

<AccountScreen>:

        FloatLayout:
                canvas:
                        Color:
                                rgb:utils.get_color_from_hex("#00ffff")

                        Rectangle:
                                size: self.size
                                pos: self.pos
                GridLayout:
