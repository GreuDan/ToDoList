<AddFriendScreen>
        FloatLayout:
                canvas:
                        Color:
                                rgb:utils.get_color_from_hex("#00ffff")

                        Rectangle:
                                size: self.size
                                pos: self.pos
                GridLayout:
                        canvas:
                                Color:
                                        rgb:utils.get_color_from_hex("#110a91")

                                Rectangle:
                                        size: self.size
                                        pos: self.pos
                        rows: 1
                        size_hint:1,.1
                        pos_hint: {"top":1,"left":1}
                        Label:
                                text:"Account"

                        Button:
                                text:"Istoric"
                                on_release:
                                        app.root.current="istoric_screen"
                                        root.manager.transition.direction="left"

                        Button:
                                text:"Notifications"
                                on_release:
                                        app.root.current="istoric_screen"
                                        root.manager.transition.direction="left"

                        Button:
                                text:"Scheduel"
                                on_release:
                                        app.root.current="scheduel_screen"
                                        root.manager.transition.direction="left"
                Label:
                        text:"Please enter friend's ID with #"
                        pos_hint:{"center_x":.5,"center_y":.8}
                        color:utils.get_color_from_hex("#000000")
                TextInput:
                        hint_text:"Add Friend"
                        id:add_friend
                        pos_hint:{"center_x":.5,"center_y":.7}
                        size_hint:.8,.07
                Button:
                        text:"ADD"
                        pos_hint:{"center_x":.5,"center_y":.5}
                        size_hint:.2,.1
                        on_release:
                                app.AddFriends(add_friend.text)
                Label:
                        text:""
                        id:id_error
                        pos_hint:{"center_x":.5,"center_y":.3}
                        size_hint:.1,.1
                        color:utils.get_color_from_hex("#000000")
                Button:
                        text:"Back"
                        pos_hint:{"center_x":.1,"center_y":.1}
                        size_hint:.1,.1
                        on_release:
                                app.AccountFill()
                                app.root.current="account_screen"
                                root.manager.transition.direction="right"