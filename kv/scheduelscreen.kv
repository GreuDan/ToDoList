<ScheduelScreen>:

        FloatLayout:
                canvas:
                        Color:
                                rgb:utils.get_color_from_hex("#00ffff")

                        Rectangle:
                                size: self.size
                                pos: self.pos

                GridLayout:
                        canvas:
                                Color:
                                        rgb:utils.get_color_from_hex("#110a91")

                                Rectangle:
                                        size: self.size
                                        pos: self.pos
                        rows: 1
                        size_hint:1,.1
                        pos_hint: {"top":1,"left":1}
                        Button:
                                text:"Account"
                                on_release:
                                        app.AccountFill()
                                        app.root.current="account_screen"
                                        root.manager.transition.direction="right"
                        Button:
                                text:"Istoric"
                                on_release:
                                        app.IstoricFill()
                                        app.root.current="istoric_screen"
                                        root.manager.transition.direction="right"
                        Button:
                                text:"Notifications"
                                on_release:
                                        app.root.current="notification_screen"
                                        root.manager.transition.direction="right"
                        Label:
                                text:"Scheduel"

                GridLayout:
                        pos_hint:{"top":.85 ,"left":1}
                        size_hint:1,.75
                        canvas:
                                Color:
                                        rgb:utils.get_color_from_hex("#110a91")

                                Rectangle:
                                        size: self.size
                                        pos: self.pos

                ScrollView:
                        id:scroll
                        pos_hint:{"top":.84 ,"left":1}
                        size_hint:1,.75

                        GridLayout:
                                id:task_banner
                                cols:1
                                spacing:10,10
                                size_hint_y:None
                                height:self.minimum_height
                                row_default_height:'50dp'
                                row_force_default:True

        ImageButton:
                size_hint:.3,.3
                pos_hint: {"center_x":.5,"center_y":.05}
                source: "Icons/button.png"
                on_release:
                        app.root.current="addtask_screen"
                        root.manager.transition.direction="left"


